<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.auth.fragments.ConfirmFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/iconImageAuth"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/icon_appname"
            />
        <TextView
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shaxsingizni tasdiqlash uchun telefon raqamingizga yuborilgan kodni kiriting"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="88dp"
            android:layout_marginTop="77dp"
            android:fontFamily="@font/inter"
            app:layout_constraintTop_toTopOf="parent"
            />
        <View
            android:id="@+id/view_pustoy"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:layout_constraintTop_toBottomOf="@+id/bio"
            />

        <com.chaos.view.PinView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cursorColor="@color/black"
            style="@style/PinWidget.PinView"
            android:cursorVisible="true"
            android:inputType="number"
            android:textSize="18sp"
            android:textStyle="bold"
            app:itemCount="6"
            app:itemHeight="60dp"
            app:itemRadius="4dp"
            app:itemWidth="48dp"
            app:lineColor="#EEEEEE"
            android:itemBackground="#EEEEEE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:viewType="rectangle"
            app:layout_constraintTop_toBottomOf="@+id/view_pustoy" />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/code"
            android:layout_marginTop="12dp"
            android:layout_marginStart="69dp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/resendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:text="Qayta yuborish"
            android:fontFamily="@font/inter"
            android:textColor="#262A85"
            app:layout_constraintTop_toBottomOf="@+id/code"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="69dp"
            />
        <Button
            android:id="@+id/tasdiqlash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_buttons"
            android:layout_marginTop="44dp"
            android:text="Tasdiqlash"
            android:textAllCaps="false"
            android:fontFamily="@font/inter"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/resendCode"
            android:layout_marginHorizontal="16dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>